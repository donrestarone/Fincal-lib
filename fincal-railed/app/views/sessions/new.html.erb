

<div class"loginbox">
  <%= form_for :session, url: sessions_path do |f| %>
  	<div class="login-group">
  		<%= f.label :email %>
  		<%= f.text_field :email %>
  	</div>

  	<div class="login-group">
  		<%= f.label :password %>
  		<%= f.password_field :password %>
  	</div>

  	<%= f.submit 'log in', class: "loginbutton" %>

  <% end %>
</div>
