<!DOCTYPE html>
<html>
  <head>
    <div class="title">
    <title><%= @title %></title>
    </div>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <h1>FinCal</h1>
  <header class="actionheader">
        <% if current_user %>

          <div class="usergreeting">
          <strong> Hello, <%= current_user.first_name.capitalize %></strong>
          <div class="logout">
          <%= link_to 'Log Out', sessions_path, method: :delete %>
          </div>
          </div>
          <div class="topribbon">
            	<%= link_to raw("&#x2655;Accounts&#x2655;"), users_accounts_path %>
          	 <%= link_to raw("&#x2690;Fincal Home&#x2690;"), root_path %>
          	<%= link_to raw("&#x24;Time Value of Money&#x24;"), tvom_path%>
            <%= link_to 'about', about_path %>
          </div>

        <% else %>
          <div class="topribbon">
            <%= link_to 'New Account', new_users_path %>
            <%= link_to 'Login', new_sessions_path %>
            <%= link_to 'about', about_path %>
          </div>
        <% end %>
  </header>
  <body>
    <%= yield %>
  </body>
  <footer>
    <p>New Updates Released Weekly</p>
  </footer>
</html>
