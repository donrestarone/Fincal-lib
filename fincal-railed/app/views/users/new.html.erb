<h2>Create New Account</h2>


<!-- Display Error Message if User didn't saved -->
<% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

<% if flash[:warning] %>
  <% flash[:warning].each do |error| %>
    <%= error %> 
  <% end %> 
<% end %>
<!-- End Error Message -->

<div class="newuserform">
  <%= form_for @user do |f| %>
    <%= f.label :first_name %>: 
    <%= f.text_field :first_name, placeholder: "letters only" %><br />

    <%= f.label :last_name %>:
    <%= f.text_field :last_name, placeholder: "letters only" %><br />

    <%= f.label :username %>:
    <%= f.text_field :username %><br />

    <%= f.label :email %>:
    <%= f.text_field :email %><br />
      
      <div class="passconditions">
        <strong>password conditions</strong>
        <ul>
          <li>must contain 6 or more characters</li>
          <li>must contain a digit</li>
          <li>must contain a lower case character</li>
          <li>must contain an uppercase character</li>
          <li>symbols are optional, for your mental sanity</li>
        </ul>
      </div>

    <%= f.label :password %>:
    <%= f.password_field :password %><br />

    <%= f.label :password_confirmation %>:
    <%= f.password_field :password_confirmation %><br />


    <%= f.submit %>
  </div>
  <% end %>